<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".del">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="575dp"
            android:background="@drawable/pizzabackground"
            android:gravity="end"
            android:orientation="vertical"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.857">

            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="141dp"
                android:layout_height="141dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.107"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="275dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:text="HELP"
                        android:textAlignment="center"
                        android:textColor="#F44336"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/circulbutton"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

                    <TextView
                        android:layout_width="57dp"
                        android:layout_height="50dp"
                        android:text="Back"
                        android:textAlignment="center"
                        android:textColor="#0A0A0A"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Name * "
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="152dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:text="Contact No * "
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="0112729729"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="152dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:text="Email * "
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="pizzaHut@gmail.com"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="152dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:text="Recipient Address * "
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Receipient Address"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/my_button"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:text="Send" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/my_button"
                        android:color="#FF4500"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:text="Cancel" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</ScrollView>