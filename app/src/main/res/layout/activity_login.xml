<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/login_back"
    android:screenOrientation="portrait" >

    <ImageView
        android:layout_width="106dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/password"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:textColor="#000"
        android:textColorHint="#2f2f2f"
        android:inputType="textPassword"
        android:hint="Password"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="44dp"
        android:textColor="#000"
        android:textColorHint="#2f2f2f"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/signIn"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_below="@+id/signIn3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/shape2"
        android:drawableLeft="@mipmap/facebook_foreground"
        android:paddingLeft="-24dp"
        android:paddingRight="40dp"
        android:text="Facebook Sign Up"
        android:textColor="#fff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/signIn3"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/shape"
        android:text="SIGN IN"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/signIn2"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_below="@+id/signIn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/shape3"
        android:drawableLeft="@mipmap/google_foreground"
        android:paddingLeft="-20dp"
        android:paddingRight="50dp"
        android:text="google sign up"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="333dp"
        android:layout_height="25dp"
        android:layout_below="@+id/signIn2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="27dp"
        android:text="No account yet? Create one"
        android:textColor="#2f2f2f"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>